@model CumulativeProject.Models.Teacher

<div class="container mt-4">
    <h2 class="mb-4">Teacher Details</h2>

    @if (Model != null)
    {
        <div class="card p-3 shadow-sm">
            <p><strong>ID:</strong> @Model.TeacherId</p>
            <p><strong>Full Name:</strong> @Model.TeacherFName @Model.TeacherLName</p>
            <p><strong>Employee Number:</strong> @Model.EmployeeNumber</p>
            <p><strong>Hire Date:</strong> @Model.HireDate.Value.ToShortDateString()</p>
            <p><strong>Salary:</strong> <span class="text-success fw-bold">$@Model.Salary</span></p>
        </div>
    }
    else
    {
        <div class="alert alert-danger">Teacher not found.</div>
    }

    <a href="/TeacherPage/List" class="btn btn-primary mt-3">Back to List</a>
</div>
