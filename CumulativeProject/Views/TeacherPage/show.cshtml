@model CumulativeProject.Models.Teacher

<h2>Teacher Details</h2>

@{
    Layout = null;  // This disables the layout
}

@if (Model != null)
{
    <p><strong>ID:</strong> @Model.id</p>
    <p><strong>Name:</strong> @Model.name</p>
    <p><strong>Course:</strong> @Model.course</p>
    <p><strong>Salary:</strong> @Model.salary.ToString("C")</p>
}
else
{
    <p>Teacher not found.</p>
}

<a href="/TeacherPage/List">Back to List</a>
