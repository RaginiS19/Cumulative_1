@model List<CumulativeProject.Models.Teacher>

<h2 class="mt-4">Teachers List</h2>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-warning">No teachers found.</div>
}
else
{
    <table class="table table-bordered table-striped mt-3">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Course</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>@teacher.id</td>
                    <td>@teacher.name</td>
                    <td>@teacher.course</td>
                    <td>$@teacher.salary</td>
                    <td><a href="/TeacherPage/Show/@teacher.id" class="btn btn-primary btn-sm">View</a></td>
                </tr>
            }
        </tbody>
    </table>
}
