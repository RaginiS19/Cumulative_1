@model List<CumulativeProject.Models.Teacher>

<h2 class="mt-4">Teachers List</h2>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-warning">No teachers found.</div>
}
else
{
    <table class="table table-bordered table-striped mt-3">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>Employee Number</th>
                <th>Hire Date</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>@teacher.TeacherId</td>
                    <td>@teacher.TeacherFName @teacher.TeacherLName</td>
                    <td>@teacher.EmployeeNumber</td>
                    <td>@teacher.HireDate.Value.ToShortDateString()</td>
                    <td>$@teacher.Salary</td>
                    <td><a href="/TeacherPage/Show/@teacher.TeacherId" class="btn btn-primary btn-sm">View</a></td>
                </tr>
            }
        </tbody>
    </table>
}
